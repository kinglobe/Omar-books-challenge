<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Books Repository</title>

  
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <%- include('partials/header.ejs') %>

    <div class="container">

      <form action="/books/search" method="POST" class="col-12 col-lg-auto mb-3 me-lg-3" _lpchecked="1">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Book Title..." name="title">
          <button type="submit" class="btn btn-secondary">Search</button>
        </div>
      </form>


    <div class="list-group">

      <% books.forEach(book => { %>
        <a href="/books/detail/<%= book.id %>" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="feature-icon bg-gradient">
            <img class="d-block mx-auto mb-4" src="<%= book.cover %>" alt="<%= book.title %>" width="172" height="257">
          </div>
          <div class="d-flex-column">
            <h5><%= book.title %></h5>
            <p><%= book.description %></p>
          </div>
        </a>
      <% }); %>
      
    </div>
  </div>
</div>


<%- include('partials/footer.ejs') %>
</body>
</html>